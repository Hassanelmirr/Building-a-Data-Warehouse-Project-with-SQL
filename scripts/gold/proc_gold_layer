

CREATE VIEW gold.dim_customers AS
SELECT 
	ROW_NUMBER() OVER( ORDER BY cst_id) AS customer_key,
	cs.cst_id AS customer_id,
	cs.cst_key AS customer_number,
	cs.cst_firstname AS first_name,
	cs.cst_lastname AS last_name,
	CASE  
		WHEN cs.cst_gndr != 'N/A' THEN cs.cst_gndr
		ELSE COALESCE(ca.gen, 'N/A')
	END AS gendar,
	loc.cntry AS country,
	cs.cst_material_status AS material_status,
	ca.bdate AS birth_date,
	cs.cst_create_date AS create_date
FROM silver.crm_cust_info cs
LEFT JOIN silver.erp_cust_az12 ca
ON    cs.cst_key = ca.cid
LEFT JOIN silver.erp_loc_a101 loc
ON		cs.cst_key = loc.cid
WHERE cs.cst_id IS NOT NULL


SELECT * FROM gold.dim_customers



----- gold dimension : poduct

SELECT * FROM silver.crm_prd_info
SELECT * FROM silver.erp_px_cat_g1v2

CREATE VIEW gold.dim_product AS
SELECT 
	ROW_NUMBER() OVER( ORDER BY prd_id) AS product_key,
	crm.prd_id AS product_id,
	crm.prd_key AS product_number,
	crm.prd_nm AS product_name,
	crm.cat_id AS category_id,
	erp.cat AS category,
	erp.subcat AS subcategory,
	erp.maintenance,
	crm.prd_cost AS cost,
	crm.prd_line AS product_line,
	crm.prd_start_dt AS product_start_date
FROM silver.crm_prd_info crm
LEFT JOIN silver.erp_px_cat_g1v2 erp
ON crm.cat_id = erp.id
WHERE prd_end_dt IS NULL

SELECT * FROM gold.dim_product

----- gold fact : sales
-- it is cummon between both dimensions : so it's fact 

SELECT * FROM silver.crm_sales_details
SELECT * FROM silver.crm_prd_info
SELECT * FROM silver.erp_px_cat_g1v2


CREATE VIEW gold.fact_sales AS 
SELECT 
	sd.sls_ord_num AS order_number,
	sd.sls_prd_key AS product_key,
	sd.sls_order_dt AS order_date,
	sd.sls_cust_id AS customer_id,
	sd.sls_ship_dt AS ship_date,
	sd.sls_due_dt AS due_date,
	sd.sls_sales AS total_sales,
	sd.sls_quantity AS quantity,
	sd.sls_price AS price
FROM silver.crm_sales_details sd
LEFT JOIN gold.dim_product pr
ON sd.sls_prd_key = pr.product_number
LEFT JOIN gold.dim_customers cu
ON sd.sls_cust_id = cu.customer_id


SELECT * from gold.fact_sales
